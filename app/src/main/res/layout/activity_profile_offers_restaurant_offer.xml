<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="profileOffersRestaurantOfferVM" type="com.wqes.app.modules.profileoffersrestaurantoffer.data.viewmodel.ProfileOffersRestaurantOfferVM"/>
    </data>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_height="wrap_content" android:layout_width="match_parent">
            <LinearLayout android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_24px"
                android:layout_marginEnd="@dimen/_35px"
                android:layout_marginStart="@dimen/_35px"
                android:layout_marginTop="@dimen/_49px"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:gravity="top|center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.29"
                    android:layout_width="0dp"
                    android:text="@string/lbl_promo_code" style="@style/textStylePoppinsregular14_9"/>
                <TextView android:gravity="top|center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:layout_width="0dp"
                    android:text="@string/msg_restaurant_offe" style="@style/textStylePoppinssemibold14_1"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:fillViewport="true" android:layout_height="0dp"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <LinearLayout android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStylered_300">
                    <LinearLayout android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20px"
                        android:layout_marginStart="@dimen/_20px"
                        android:layout_width="wrap_content" android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_17px"
                            android:layout_width="@dimen/_10px" android:src="@drawable/_2d7e37f470e288bf99df74248282992f"/>
                        <TextView android:gravity="top|start"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_23px"
                            android:layout_width="wrap_content"
                            android:text="@string/lbl_offers" style="@style/textStylePoppinsmedium18_1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_62px"
                        android:layout_width="match_parent"
                        android:orientation="vertical" style="@style/groupStyle_1">
                        <View android:background="@color/red_300"
                            android:layout_gravity="start"
                            android:layout_height="@dimen/_2px" android:layout_width="match_parent"/>
                        <View android:background="@color/white_A700"
                            android:layout_gravity="end"
                            android:layout_height="@dimen/_2px" android:layout_width="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <HorizontalScrollView android:fillViewport="true"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20px"
                    android:layout_marginTop="@dimen/_58px"
                    android:layout_width="match_parent" android:scrollbars="none">
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical" style="@style/groupStyle_1">
                        <TextView android:gravity="top|start"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/lbl_offers" style="@style/textStylePoppinssemibold16"/>
                        <FrameLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16px" android:layout_width="wrap_content">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent" android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.86"
                                    android:layout_width="0dp"
                                    android:orientation="vertical" style="@style/groupStyle_2">
                                    <FrameLayout
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="match_parent" android:layout_width="match_parent">
                                    <ImageView
                                    android:layout_gravity="center"
                                    android:layout_height="@dimen/_185px"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitCenter"
                                    cornerRadius="@{@dimen/_25px}" imageRes="@{@drawable/_c312e77ad72b753a3072d87f7beef868dd32e82e}"/>
                                    <TextView
                                    android:gravity="top|start"
                                    android:layout_gravity="bottom|end"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_45px"
                                    android:layout_marginTop="@dimen/_100px"
                                    android:layout_width="wrap_content"
                                    android:text="@string/lbl_the_taj" style="@style/textStyleRobotoregular19"/>
                                    </FrameLayout>
                                </LinearLayout>
                                <FrameLayout
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20px"
                                    android:layout_weight="0.9"
                                    android:layout_width="0dp" style="@style/groupStyle_1">
                                    <ImageView
                                    android:layout_gravity="center"
                                    android:layout_height="@dimen/_185px" android:layout_width="@dimen/_354px"/>
                                    <FrameLayout
                                    android:layout_gravity="bottom|end"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_9px"
                                    android:layout_marginEnd="@dimen/_44px"
                                    android:layout_marginTop="@dimen/_100px"
                                    android:layout_width="wrap_content" style="@style/groupStyle_1">
                                    <TextView
                                    android:gravity="top|start"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/lbl_the_taj" style="@style/textStyleRobotoregular19_2"/>
                                    <TextView
                                    android:gravity="top|start"
                                    android:layout_gravity="bottom|center"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/lbl_restaurant" style="@style/textStyleRobotolight13_2"/>
                                    </FrameLayout>
                                </FrameLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center|end"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="vertical" style="@style/groupStyle_1">
                                <FrameLayout
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" style="@style/groupStyle_1">
                                    <ImageView
                                    android:layout_gravity="center"
                                    android:layout_height="@dimen/_185px"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitCenter" imageRes="@{@drawable/_388d28491f5f40f191f00b7bd2e71c912d38bd69}"/>
                                    <FrameLayout
                                    android:background="@drawable/rectangle_bg_black_900_radius_25"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content" android:layout_width="match_parent"/>
                                    <FrameLayout
                                    android:layout_gravity="bottom|end"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_9px"
                                    android:layout_marginTop="@dimen/_100px"
                                    android:layout_width="wrap_content" style="@style/groupStyle_1">
                                    <TextView
                                    android:gravity="top|start"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/lbl_the_taj" style="@style/textStyleRobotoregular19_3"/>
                                    <TextView
                                    android:gravity="top|start"
                                    android:layout_gravity="bottom|center"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/lbl_restaurant" style="@style/textStyleRobotolight13_3"/>
                                    </FrameLayout>
                                    <FrameLayout
                                    android:background="@color/gray_900"
                                    android:layout_gravity="bottom|end"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_7px"
                                    android:layout_marginTop="@dimen/_100px" android:layout_width="wrap_content"/>
                                </FrameLayout>
                            </LinearLayout>
                            <EditText
                                android:background="@drawable/rectangle_bg_gray_900"
                                android:fontFamily="@font/roboto"
                                android:gravity="top|start"
                                android:hint="@string/lbl_restaurant"
                                android:id="@+id/etRestaurant"
                                android:layout_gravity="bottom|center"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_7px"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_2px"
                                android:paddingStart="@dimen/_14px"
                                android:paddingTop="@dimen/_12px"
                                android:singleLine="true"
                                android:textColor="@color/yellow_A200"
                                android:textColorHint="@color/yellow_A200"
                                android:textFontWeight="300"
                                android:textSize="@dimen/_13px" android:textStyle="bold"/>
                        </FrameLayout>
                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20px"
                    android:layout_marginStart="@dimen/_20px"
                    android:layout_marginTop="@dimen/_30px"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStyle_1">
                    <TextView android:gravity="top|start"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/lbl_all_offers" style="@style/textStylePoppinssemibold16"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16px"
                        android:layout_width="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        itemSpace="@{@dimen/_16px}" tools:itemCount="3" tools:listitem="@layout/row_profile_offers_restaurant_offer"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
